---
interface Props {
	description: string;
}

const { description } = Astro.props;
---

<article class="ai-c fd-c g-2 ta-c sl-flex">
    <img class="w-60" src="https://i.ibb.co/3094kwS/yummacss.png" />
    <small>
		{description}
	</small>
    
	<slot />
</article>

<style>
	article {
		margin-inline: auto;
		max-width: 40rem;
		padding-block: 5rem;
	}
    
	article > :global(*) {
		margin-top: 0 !important;
		max-width: 50ch;
	}

	small {
		color: var(--sl-color-gray-3);
	}
</style>